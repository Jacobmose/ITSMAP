<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jacobmosehansen.themeproject.CreateUserFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_title"
            android:id="@+id/tv_title" android:layout_gravity="center"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:text="@string/txt_first_name"
            android:id="@+id/tv_first_name"
            android:textColor="#000000"
            android:layout_below="@+id/tv_title"
            android:layout_alignParentLeft="true"
            android:textSize="15dp"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/ed_first_name"
            android:hint="@string/txt_first_name"
            android:textColor="#000000"
            android:layout_alignTop="@+id/tv_first_name"
            android:layout_alignParentRight="true"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:text="@string/txt_last_name"
            android:textColor="#000000"
            android:id="@+id/tv_last_name"
            android:layout_below="@+id/tv_first_name"
            android:textSize="15dp"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:id="@+id/ed_last_name"
            android:hint="@string/txt_last_name"
            android:layout_alignTop="@+id/tv_last_name"
            android:layout_alignParentRight="true"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:text="@string/txt_email"
            android:id="@+id/tv_email"
            android:layout_below="@+id/tv_last_name"
            android:layout_alignRight="@+id/tv_last_name"
            android:textSize="15dp"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/ed_email"
            android:hint="@string/txt_email"
            android:layout_below="@+id/tv_last_name"
            android:layout_alignParentRight="true"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:text="@string/txt_username"
            android:id="@+id/tv_username"
            android:layout_below="@+id/tv_email"
            android:layout_alignRight="@+id/tv_email"
            android:textSize="15dp"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:id="@+id/ed_username"
            android:hint="@string/txt_username"
            android:layout_alignTop="@+id/tv_username"
            android:layout_alignParentRight="true"
            android:textSize="15dp"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/ed_password"
            android:hint="@string/txt_password"
            android:layout_alignLeft="@+id/ed_username"
            android:layout_below="@+id/tv_username"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:text="@string/txt_password"
            android:id="@+id/tv_password"
            android:layout_alignTop="@+id/ed_password"
            android:layout_alignRight="@+id/tv_username"
            android:textSize="15dp"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:text="@string/btn_sign_up"
            android:id="@+id/btn_sign_up"
            android:layout_below="@+id/tv_password"
            android:layout_alignRight="@+id/tv_first_name"
            android:textSize="13dp"/>

        <Button
            android:layout_width="175dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:text="@string/btn_back_to_login"
            android:id="@+id/btn_back_to_login"
            android:layout_below="@+id/ed_password"
            android:layout_alignParentRight="true"
            android:textSize="13dp"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="56dp"
            android:textColor="#000000"
            android:id="@+id/register_error"
            android:layout_below="@+id/btn_sign_up"
            android:layout_alignParentRight="true" />

    </RelativeLayout>
</FrameLayout>
